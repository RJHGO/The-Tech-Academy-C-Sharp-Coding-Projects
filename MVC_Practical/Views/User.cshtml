@using MVC_Practical.Models
@model List<NewInsuranceQuote>

<div class="card-header text-center">
    <h5 class="m-0">Your new insurance quote.</h5>
</div>
<div class=" card-body">
    @using (Html.BeginForm("InsuranceQuote", "Home", FormMethod.Get))
    {
    <div class="row no-gutters m-3">
        <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
            <div class="card-header text-center">
                <h5 class="m-0">Your new insurance quote</h5>
            </div>
            <div class="card-body">
                @foreach (var quote in Model)
                {
                    <div class="row">
                        <div class="col">
                            @quote.NewQuote
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    }

